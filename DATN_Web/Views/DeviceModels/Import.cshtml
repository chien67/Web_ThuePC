@model DATN_Web.Models.ViewModels.DeviceImportVM
@{
    ViewBag.Title = "Nhập kho";
}
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tạo mới thiết bị</h3>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("SaveImport")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Import.ModelId" value="@Model.Import.ModelId" />
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover">
                                    <thead class="text-center">
                                        <tr>
                                            <th style="width:35%">Thiết bị</th>
                                            <th style="width:25%">Đối tác</th>
                                            <th style="width:20%">Số lượng</th>
                                            <th style="width:20%">Loại nhập</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="align-middle text-center">
                                                <div class="font-weight-bold">@Model.DeviceModelName</div>
                                                <div class="text-muted">@Model.DeviceModelConfig</div>
                                            </td>
                                            <td>
                                                <input type="text" name="Import.Partner" class="form-control" required />
                                            </td>
                                            <td>
                                                <input type="number" name="Import.ImportQuantity" class="form-control" min="1" required />
                                            </td>
                                            <td>
                                                <select name="Import.ImportType" class="form-control">
                                                    <option value="1">Nhập mua</option>
                                                    <option value="2">Mượn</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-center align-middle">Ghi chú</th>
                                            <td colspan="3">
                                                <textarea name="Import.Note" class="form-control" rows="3"></textarea>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-primary">Xác nhận nhập</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>