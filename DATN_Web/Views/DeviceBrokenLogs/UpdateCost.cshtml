@model DATN_Web.Models.ViewModels.UpdateRepairCostVM
@{ ViewBag.Title = "Danh sách thiết bị hỏng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card">
                <div class="card-header bg-success">
                    <h3 class="card-title ">@ViewBag.Title</h3>
                </div>
                <form method="post" role="form" id="quickForm">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.BrokenLogId)
                    <div class="card-body">
                        <div class="form-group">
                            <label>Thiết bị</label>
                            <input class="form-control" value="@Model.ModelText" readonly />
                        </div>

                        <div class="form-group">
                            <label>Giá sửa</label>
                            @Html.TextBoxFor(m => m.EstimatedCost, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label>Ghi chú</label>
                            @Html.TextAreaFor(m => m.CostNote, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-success">
                            Lưu báo giá
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>