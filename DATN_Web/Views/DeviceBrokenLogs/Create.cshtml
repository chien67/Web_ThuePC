@model DATN_Web.Models.ViewModels.CreateBrokenDeviceVM
@{
    ViewBag.Title = "Danh sách thiết bị hỏng / sửa";
}
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card">
                <div class="card-header bg-success">
                    <h3 class="card-title ">@ViewBag.Title</h3>

                </div>

                <div class="card-body p-0">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger mt-2" })
                        }
                        <div class="card-body">
                            <div class="form-group">
                                <label>Thiết bị</label>
                                @Html.DropDownListFor(m => m.ModelId,
                                    ViewBag.Models as SelectList,
                                    "-- Chọn thiết bị --",
                                    new { @class = "form-control", required = "required" })
                            </div>

                            <div class="form-group">
                                <label>Khách hàng (nếu có)</label>
                                @Html.DropDownListFor(m => m.CustomerId,
                                    ViewBag.Customers as SelectList,
                                    "-- Nội bộ --",
                                    new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Số lượng hỏng</label>
                                @Html.TextBoxFor(m => m.Quantity,
                                    new { @class = "form-control", type = "number", min = "1" })
                            </div>

                            <div class="form-group">
                                <label>Lý do hỏng</label>
                                @Html.TextAreaFor(m => m.BrokenReason,
                                    new { @class = "form-control", rows = 3 })
                            </div>
                        </div>

                        <div class="card-footer text-right">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save"></i> Tạo đơn sửa
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                Quay lại
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>