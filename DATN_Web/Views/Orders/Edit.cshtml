@model DATN_Web.Models.ViewModels.CreateOrderVM
@{ ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using DATN_Web.Models.Enum
@{
    OrderStatus status = Model.Order.Status;
    bool disableFinish = status == OrderStatus.Preparing;
    bool disableCancel = status == OrderStatus.Active;
}
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card">
                <form method="post" action="@Url.Action("Edit","Orders")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Order.OrderId" value="@Model.Order.OrderId" />
                    <input type="hidden" name="Order.CustomerId" value="@Model.Order.CustomerId" />

                    <div class="card-header">
                        <h3 class="card-title">
                            1. Cập nhập thông tin đơn hàng
                        </h3>
                        <div class="card-tools">
                            <span class="badge badge-light">
                                Ngày tạo: @DateTime.Now.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <div class="mr-2">
                                <span class="badge badge-primary p-2">
                                    <i class="fas fa-building"></i>
                                </span>
                            </div>
                            <div>
                                <div class="text-muted" style="line-height:1">Khách hàng</div>
                                <div class="h5 mb-0 font-weight-bold">@Model.Customer.CustomerName</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <i class="fas fa-user mr-1"></i>
                                    <span class="text-muted">Đại diện:</span>
                                    <b>@Model.Customer.RepresentativeName</b>
                                </div>

                                <div class="mb-2">
                                    <i class="fas fa-id-card mr-1"></i>
                                    <span class="text-muted">MST/CCCD:</span>
                                    <b>@Model.Customer.TaxCode</b>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-2">
                                    <i class="fas fa-phone mr-1"></i>
                                    <span class="text-muted">Điện thoại:</span>
                                    <b>@Model.Customer.Phone</b>
                                </div>

                                <div class="mb-2">
                                    <i class="fas fa-envelope mr-1"></i>
                                    <span class="text-muted">Email:</span>
                                    <b>@Model.Customer.Email</b>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-2 mb-0">
                            <label class="mb-1">
                                <i class="fas fa-map-marker-alt mr-1"></i>
                                Địa chỉ giao hàng
                            </label>
                            <input type="text"
                                   class="form-control"
                                   name="Order.DeliveryAddress"
                                   value="@Model.Order.DeliveryAddress" />
                        </div>
                    </div>
                    <!--2. -->
                    <div class="card-header">
                        <h3 class="card-title">
                            2. Thiết bị thuê
                        </h3>
                    </div>
                    <div class="card-body">
                        <!-- Ngày giao / Ngày trả -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ngày giao:</label>
                                    <div class="input-group">
                                        <input type="date" class="form-control"
                                               name="Order.DeliveryDate"
                                               value="@(Model.Order.DeliveryDate?.ToString("yyyy-MM-dd"))" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Ngày trả:</label>
                                    <div class="input-group">
                                        <input type="date" class="form-control"
                                               name="Order.ReturnDate"
                                               value="@(Model.Order.ReturnDate?.ToString("yyyy-MM-dd"))" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Bảng thiết bị -->
                        <div class="table-responsive mt-2">
                            <table class="table table-bordered table-hover" id="detailTable">
                                <thead class="text-center">
                                    <tr>
                                        <th>Loại thiết bị</th>
                                        <th>Yêu cầu thiết bị</th>
                                        <th style="width:120px;">Số lượng</th>
                                        <th style="width:120px;">Số ngày</th>
                                        <th style="width:150px;">Đơn giá</th>
                                        <th style="width:150px;">Tiền cọc</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DropDownListFor(m => m.Order.CategoryId,(IEnumerable<SelectListItem>)ViewBag.Categories,"-- Chọn danh mục --", new { @class = "form-control" })
                                        </td>
                                        <td>
                                            <textarea name="Order.DeviceRequirement"
                                                      class="form-control" rows="2">@Model.Order.DeviceRequirement</textarea>
                                        </td>
                                        <td>
                                            <input type="number" name="Order.Quantity"
                                                   class="form-control" min="1"
                                                   value="@Model.Order.Quantity" />
                                        </td>
                                        <td>
                                            <input type="number" name="Order.RentDays"
                                                   class="form-control" min="1"
                                                   value="@Model.Order.RentDays" />
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Order.UnitPrice, "{0:0.00}", new { @class = "form-control" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Order.DepositAmount, "{0:0.00}", new { @class = "form-control" })
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div class="card-header">
                        <h3 class="card-title">
                            3. Tình trạng đơn hàng:
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="col-md-6">
                            <div class="form-group">
                                <select name="Order.Status" class="form-control">
                                    <option value="0" @(Model.Order.Status == DATN_Web.Models.Enum.OrderStatus.Preparing ? "selected" : "")>Đang chuẩn bị</option>
                                    <option value="1" @(Model.Order.Status == DATN_Web.Models.Enum.OrderStatus.Active ? "selected" : "")>Đã giao hàng</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-end align-items-center gap-2">
                        <button type="submit" class="btn btn-outline-success px-4">
                            <i class="fas fa-save mr-1"></i> Lưu
                        </button>
                        <button type="submit"
                                class="btn btn-outline-primary px-4 mr-2 @(disableFinish ? "disabled" : "")"
                                formaction="@Url.Action("FinishOrder", "Orders")"
                                formmethod="post"
                                @(disableFinish ? "disabled title='Đơn hàng đang chuẩn bị, chưa thể kết thúc'" : "")
                                onclick="return @(disableFinish ? "false" : "confirm('Bạn có chắc chắn muốn KẾT THÚC đơn hàng này không?');")">
                            <i class="fas fa-check-circle mr-1"></i> Kết thúc đơn hàng
                        </button>
                        <button type="submit"
                                class="btn btn-outline-danger px-4 @(disableCancel ? "disabled" : "")"
                                formaction="@Url.Action("DeleteOrder", "Orders")"
                                formmethod="post"
                                @(disableCancel ? "disabled title='Đơn hàng đã giao, không thể huỷ'" : "")
                                onclick="return @(disableCancel ? "false" : "confirm('Bạn có chắc chắn muốn huỷ đơn hàng này không?');")">
                            <i class="fas fa-trash mr-1"></i> Huỷ đơn hàng
                        </button>
                        <button href="@Url.Action("DetailCustomers","Customers", new { id = Model.Customer.CustomerId })"
                                class="btn btn-secondary px-4 ml-2">
                            <i class="fas fa-times mr-1"></i> Thoát
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>