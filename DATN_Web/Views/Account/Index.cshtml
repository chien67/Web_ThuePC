@model IEnumerable<DATN_Web.Models.Entities.User>
@{ ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Main content -->
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="card">
                <div class="card-header bg-success">
                    <h3 class="card-title ">@ViewBag.Title</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example2" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên đăng nhập</th>
                                            <th>Tên người dùng</th>
                                            <th>Email</th>
                                            <th>Quyền</th>
                                            <th>Trạng Thái</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int stt = 1;
                                        }
                                        @foreach (var u in Model)
                                        {
                                            <tr>
                                                <td>@stt</td>
                                                <td>@u.Username</td>
                                                <td>@u.FullName</td>
                                                <td>@u.Email</td>
                                                <td>@(u.Role == 1 ? "User" : (u.Role == 3 ? "Quản lý kho" : "Admin"))</td>
                                                <td>@(u.IsActive ? "Hoạt động" : "Khóa")</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit","Account", new { id = u.UserId })">
                                                        <i class="fas fa-pencil-alt"></i> Sửa
                                                    </a>
                                                    @using (Html.BeginForm("Delete", "Account", new { id = u.UserId }, FormMethod.Post, new { onsubmit = "return confirm('Xoá tài khoản này?');", style = "display:inline-block" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fas fa-trash"></i> Xoá
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                            stt++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>


