@model DATN_Web.Models.ViewModels.LoginVM
@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Plugins/fontawesome-free/css/all.min.css")" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <!-- Theme style -->
    <link href="@Url.Content("~/Content/css_admin/css/adminlte.min.css")" rel="stylesheet" />
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Đăng Nhập</b></a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Đăng nhập để vào hệ thống</p>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @* Lỗi chung *@
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Tài khoản" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })

                    <div class="input-group mb-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">Remember Me</label>
                            </div>
                        </div>

                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                    </div>
                }

                <p class="text-muted mt-3 mb-0" style="font-size: 13px;">
                    * Tài khoản do Admin cấp. Không hỗ trợ tự đăng ký.
                </p>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="@Url.Content("~/Plugins/jquery/jquery.min.js")"></script>
    <!-- Bootstrap 4 -->
    <script src="@Url.Content("~/Plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Scripts/js/adminlte.min.js")"></script>
</body>
</html>