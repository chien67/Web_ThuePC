@model DATN_Web.Models.ViewModels.ReportFilterVM
@{
    ViewBag.Title = "Báo cáo theo thời gian";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <div class="container-fluid">

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lọc báo cáo</h3>
                    </div>

                    <div class="card-body">
                        @using (Html.BeginForm("Index", "Dashboard", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row">
                                <div class="col-md-3">
                                    <label>Từ ngày</label>
                                    @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                                <div class="col-md-3">
                                    <label>Đến ngày</label>
                                    @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button class="btn btn-success w-100" type="submit">Lọc</button>
                                </div>
                            </div>
                        }

                        <hr />

                        <table class="table table-bordered table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th>Chỉ số</th>
                                    <th>Kết quả</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Doanh thu</td>
                                    <td class="text-right"><b>@String.Format("{0:N0}", Model.Revenue)</b> VNĐ</td>
                                </tr>
                                <tr>
                                    <td>Khách hàng mới</td>
                                    <td class="text-right"><b>@Model.NewCustomers</b></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="text-muted">
                            Khoảng thời gian:
                            <b>@(Model.FromDate?.ToString("dd/MM/yyyy"))</b> —
                            <b>@(Model.ToDate?.ToString("dd/MM/yyyy"))</b>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>